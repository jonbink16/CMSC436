<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#667B99"
    tools:context="com.example.oscar.cmsc436.activities.MainActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:text="Tap Test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tapTest"
                android:onClick="tapTest"
                android:background="#AFBBD2"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/selectTest"
                android:layout_alignParentStart="true" />

            <Button
                android:text="Spiral Test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spiralTest"
                android:onClick="spiralTest"
                android:background="#CCD5E6"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/tapTest"
                android:layout_alignParentStart="true" />

            <Button
                android:text="Level Test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/levelTest"
                android:onClick="levelTest"
                android:layout_marginTop="20dp"
                android:background="#E9EEF6"
                android:layout_below="@+id/spiralTest"
                android:layout_alignParentStart="true" />
            <Button
                android:text="Balloon Test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/balloonTest"
                android:onClick="balloonTest"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF"
                android:layout_below="@+id/levelTest"
                android:layout_alignParentStart="true" />

            <Button
                android:text="Arm Test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/armTest"
                android:onClick="armTest"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF"
                android:layout_below="@+id/balloonTest"
                android:layout_alignParentStart="true" />


            <Button
                android:text="Sway Test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/swayTest"
                android:onClick="swayTest"
                android:background="#FFFFFF"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/armTest" />

            <Button
                android:text="Walking Test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/walkingTest"
                android:onClick="walkingTest"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/swayTest"
                android:background="#FFFFFF" />

            <Button
                android:text="Outdoor Walking Test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/outdoorWalkingTest"
                android:onClick="outdoorWalkingTest"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/walkingTest"
                android:background="#FFFFFF" />

            <Button
                android:text="Post Data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/postButton"
                android:onClick="postData"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/outdoorWalkingTest"
                android:background="#FFFFFF" />

            <Button
                android:text="Change ID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/changeButton"
                android:onClick="changeID"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/postButton"
                android:background="#FFFFFF" />

            <TextView
                android:text="Select a test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/selectTest"
                android:background="#667B99"
                android:textColor="#CCCCCC"
                android:textStyle="bold"
                android:textSize="40sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />


        </RelativeLayout>




    </ScrollView>

</RelativeLayout>
